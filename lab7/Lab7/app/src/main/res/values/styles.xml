<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn">
        <item name="android:layout_width">150sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/btn</item>
    </style>

    <style name="textview_Big">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="textview_Middle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="textview_Small">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>